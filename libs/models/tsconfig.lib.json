{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": []
  },
  "exclude": [
    "src/**/*.spec.ts",
    "src/test-setup.ts",
    "jest.config.ts",
    "src/**/*.test.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/lib/plugins/add-override.plugin.js",
    "src/lib/utils/post-processing.util.js",
    "src/lib/utils/delete-directory.util.js",
    "src/lib/utils/pre-processing.util.js"
  ]
}
