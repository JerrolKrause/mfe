{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "$brand": ["libs/brand/src/index.ts"],
      "$icons": ["libs/icons/src/index.ts"],
      "$libs": ["./libs"],
      "$state-management": ["libs/state-management/src/index.ts"],
      "@dashboard/*": ["apps/dashboard/src/*"],
      "@quoting/*": ["apps/quoting/src/*"],
      "@sandbox/*": ["apps/sandbox/src/*"],
      "@users/*": ["apps/users/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
