{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "$brand": ["libs/brand/src"],
      "$forms": ["libs/forms/src/index.ts"],
      "$icons": ["libs/icons/src/index.ts"],
      "$masterpage": ["libs/masterpage/src/index.ts"],
      "$quote-calculator": ["libs/quote-calculator/src/index.ts"],
      "$state-management": ["libs/state-management/src/index.ts"],
      "$shared": ["libs/shared/src/index.ts"],
      "@customer/*": ["apps/customer/src/*"],
      "@dashboard/*": ["apps/dashboard/src/*"],
      "@quoting/*": ["apps/quoting/src/*"],
      "@sandbox/*": ["apps/sandbox/src/*"],
      "@team-member/*": ["apps/team-member/src/*"],
      "@users/*": ["apps/users/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
